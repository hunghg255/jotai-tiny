    {
      "path": "dist/jotai-tiny.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "keywords": ["React", "React state management", "atom"],
  "homepage": "https://github.com/hunghg255/jotai-tiny",
